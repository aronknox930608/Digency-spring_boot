<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="acm_user" id="CREATE_TABLE_DEMAND" logicalFilePath="acm"
               runOnChange="true">
        <createTable tableName="DEMAND">
            <column autoIncrement="true" name="ID" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="PK_DEMAND"/>
            </column>

            <column name="REF_DEMAND" type="VARCHAR(20)"/>
            <column name="STATUS" type="VARCHAR(255)"/>
            <column name="DECISION_DATE" type="DATE"/>
            <column name="COMMENT" type="VARCHAR(500)"/>

            <column name="REF_DEMAND_OWNER" type="VARCHAR(20)"/>
            <column name="REF_HONORARY_AWARD" type="VARCHAR(50)"/>
            <column name="REF_CANDIDATE" type="VARCHAR(50)"/>
            <column name="REF_PRICE" type="VARCHAR(50)"/>
            <column name="REF_BOOK_AWARD" type="VARCHAR(50)"/>
            <column name="REF_WRITER" type="VARCHAR(20)"/>
            <column name="REF_THEATER_AWARD" type="VARCHAR(50)"/>
            <column name="REF_THEATER_PIECE" type="VARCHAR(50)"/>
            <column name="REF_REPRESENTATIVE" type="VARCHAR(50)"/>
            <column name="REF_PERSON_CONNECTED" type="VARCHAR(20)"/>

            <column name="DATE_CREATION" type="TIMESTAMP"/>
            <column name="DATE_MODIFICATION" type="TIMESTAMP"/>
            <column name="MODIFICATION_PAR" type="VARCHAR(255)"/>
            <column name="CREATION_PAR" type="VARCHAR(255)"/>
        </createTable>

    </changeSet>

</databaseChangeLog>
